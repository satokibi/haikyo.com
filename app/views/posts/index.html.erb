<h1>haikyo.com</h1>
<%= form_for :post, url: posts_path do |f| %>
<p><%= f.label :name %></p>
<p><%= f.text_field :name %></p>
<p><%= f.label :email %></p>
<p><%= f.text_field :email %></p>
<p><%= f.label :body %></p>
<p><%= f.text_area :body %></p>
<%= f.submit %>
<% end %>

<% @posts.each do |post| %>
  <ul>
    <li>
      <%= post.id %><%= post.body %>
    </li>
  </ul>
<% end %>
